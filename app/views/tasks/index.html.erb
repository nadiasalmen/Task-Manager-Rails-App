<div class="container">
  <h1 class="my-3 font-weight-bolder text-info">My Tasks</h1>
  <% @tasks.each do |task| %>
    <p class="mb-0 text-secondary">
      <% if task.completed == true %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title.capitalize, task_path(task) %>
    </p>
  <% end %>
  <div class="container border border-secondary my-3"></div>
  <%= link_to tasks_new_path do %>
    <i class="fas fa-plus"></i> Add a new task
  <% end %>
  <!-- another option to insert the icon into the rails link -->
  <!-- <%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, tasks_new_path %> -->
</div>
